<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Banner -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView" />

    <!-- App Menu -->

    <!-- Search bar for movies -->
    <include layout="@layout/search_bar_screen"
        android:id="@+id/search_bar_menu" />

    <!-- Get Latest Movies -->

    <Button
        android:id="@+id/start_screen_latest_movie_screen_button"
        android:layout_width="250dp"
        style="@style/buttonDefault"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="@string/button_latest_movies" />

    <!-- Get Popular TV show -->

    <Button
        android:layout_below="@id/start_screen_latest_movie_screen_button"
        android:id="@+id/start_screen_popular_tv_show_screen_button"
        style="@style/buttonDefault"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/button_popular_tv_show" />

    <!-- Get Random Movie -->

    <Button
        style="@style/buttonDefault"
        android:text="@string/button_random_movie"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/start_screen_popular_tv_show_screen_button"
        android:id="@+id/start_screen_random_movie_button"/>



</RelativeLayout>