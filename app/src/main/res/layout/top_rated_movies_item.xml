<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/top_rated_movie_item_cardview"
        style="@style/defaultCardView"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Top Rated Movie list item -->


            <ImageView
                android:id="@+id/top_rated_movies_item_placeholder"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_rating" />

            <TextView
                android:id="@+id/top_rated_movies_item"
                style="@style/defaultTitleCardView"
                android:layout_below="@+id/top_rated_movies_item_placeholder" />


            <TextView
                android:id="@+id/top_rated_movies_item_rating"
                style="@style/defaultDetailCardView"
                android:layout_below="@id/top_rated_movies_item"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

