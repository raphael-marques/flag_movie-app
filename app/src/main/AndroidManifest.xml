<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="topRatedMovies.flag.pt.moviesapp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Activities Declaration -->

        <activity android:name="topRatedMovies.flag.pt.moviesapp.screens.StartScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="topRatedMovies.flag.pt.moviesapp.screens.LatestMovieScreen"/>
        <activity android:name="topRatedMovies.flag.pt.moviesapp.screens.PopularTvShowScreen"/>
        <activity android:name="topRatedMovies.flag.pt.moviesapp.screens.DetailMovieScreen"/>
        <activity android:name="topRatedMovies.flag.pt.moviesapp.screens.SearchMovieScreen"/>
        <activity android:name="topRatedMovies.flag.pt.moviesapp.screens.DetailTvShowScreen"/>
        <activity android:name="topRatedMovies.flag.pt.moviesapp.screens.RandomMovieScreen"/>


        <!-- Database configurations -->

        <meta-data
            android:name="DATABASE"
            android:value="flag_database.db"/>
        <meta-data
            android:name="VERSION"
            android:value="1"/>
        <meta-data
            android:name="QUERY_LOG"
            android:value="true"/>
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="pt.flag.database.entities"/>

    </application>

</manifest>